<!-- Nama pages-->
{% set title = 'Kanno - User Dashboard' %}
{% set style = 'settings' %}
{% extends "user-dashboard.njk" %}

{% block content %}
   <!-- MAIN -->
    <main id="main-settings">
        <div class="container-kanoo">
            <div class="row-flex-kanoo">
                <aside class="aside-settings">
                    <div class="mb-24px">
                        <h3 class="aside-title">Settings</h3>
                    </div>
                    <div class="mb-16px">
                        <a href="./settings-account.html" class="aside-link">Account</a>
                    </div>
                    <div class="mb-16px">
                        <a href="./settings-security.html" class="aside-link">Security</a>
                    </div>
                    <div>
                        <a href="./settings-billings.html" class="aside-link aside-link-active">Billings</a>
                    </div>
                </aside>
                <div class="main-line"></div>
                <section class="section-settings">
                    <div class="mb-8px">
                        <h1 class="section-title">Billings Settings</h1>
                    </div>
                    <div class="mb-40px">
                        <h6 class="section-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod.</h6>
                    </div>
                    <form class="section-settings-container">
                        <div class="mb-32px">
                            <h5 class="section-subtitle">Edit Billing Method</h5>
                        </div>
                        <div class="mb-24px">
                            <h6 class="section-subtitle-16px">Bank Account</h6>
                        </div>
                        <div class="mb-24px">
                            <img src="../assets/images/bank-bri.png" height="48" alt="#">
                        </div>
                        <div class="mb-24px">
                            <input class="section-form-input w-full" type="text" value="3333 3333 3333" readonly>
                        </div>
                        <div class="mb-48px">
                            <input class="section-form-input w-full" type="text" value="Agus Puyono">
                        </div>
                        <div class="flex items-center justify-end">
                            <button class="section-button-link-remove-method">Remove Method</button>
                            <a href="./settings-security.html" class="section-button-link-cancel ml-32px">Cancel</a>
                            <button class="section-button-link ml-32px">Save Changes</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </main>
    <!-- COVER BODY: MODAL -->
    <div class="kanoo-cover-body"></div>
{% endblock %}